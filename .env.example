# Tré Kante Family Recipes - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database (Supabase)
# Get from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL="postgresql://postgres.[project-id]:[password]@aws-0-us-west-2.pooler.supabase.com:5432/postgres"

# Supabase Storage (for images)
# Get from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://[project-id].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase Service Role Key (for admin operations)
# ⚠️  Keep this secret! Don't expose in frontend code
# Get from: Supabase Dashboard → Settings → API
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# NextAuth (authentication)
# Generate secret with: openssl rand -base64 32
AUTH_SECRET="generate-a-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI (for AI chat features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Mobile iOS YouTube import key
# Set this and copy the same value into iOS Info.plist FAMILY_IMPORT_KEY
FAMILY_IMPORT_KEY="set-a-long-random-string"
